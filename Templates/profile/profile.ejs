<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Profile</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <style>
            body {
                
	background-image: linear-gradient(30deg, black, grey);
            }
            
            *{
                color: whitesmoke;
            }
            .form-control:focus {
                box-shadow: none;
                border-color: #BA68C8
            }
            
            .profile-button {
                color: #f9f9f9;
                box-shadow: none;
                border: none;
            }
            
            .profile-button:hover {
                background: #682773
            }
            
            .profile-button:focus {
                background: #682773;
                box-shadow: none
            }
            
            .profile-button:active {
                background: #682773;
                box-shadow: none
            }
            
            .back:hover {
                color: #682773;
                cursor: pointer
            }
            
            .labels {
                font-size: 11px;
                color:#B8B8B8
            }
            .h4, h4 {
                font-size: calc(1.275rem + .3vw);
                color: peru;
            }
            .add-experience:hover {
                background: #BA68C8;
                color: #fff;
                cursor: pointer;
                border: solid 1px #BA68C8
            }
        </style>
    </head>
     <body>
        <div class="container rounded bg-white mt-5 mb-5">
            
            <div class="row" style="background-image: linear-gradient(30deg, black, yellow,grey);">
                <div class="col-md-2 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span><%= e1 %></span><span> </span></div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">PROFILE</h4>
                        </div>
                        <div class="row mt-2">
                            <form action="/editprofile" method="POST">
                                <div class="col-md-6"><input id="k" type="hidden" name="userid" class="form-control" placeholder="first name" value=""></div>
                                <div class="col-md-6"><label class="labels">Name</label><input type="text" name="fname" class="form-control" placeholder="first name" value=""></div>
                            <div class="col-md-6"><label class="labels">Surname</label><input type="text" name="lname" class="form-control" value="" placeholder="surname"></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" name="mobile" class="form-control" placeholder="enter phone number" value=""></div>
                            <div class="col-md-12"><input type="hidden" name="email" class="form-control" placeholder="enter address line 1" value="<%= e1 %>"></div>
                            <div class="col-md-12"><label class="labels">Address</label><input type="text" name="address" class="form-control" placeholder="Address" value=""></div>
                            <div class="col-md-12"><label class="labels">Postcode</label><input type="text" name="postcode" class="form-control" placeholder="Postcode" value=""></div>
                        </div>

                        
                        <div class="col-md-12"><label class="labels">Program</label><input type="text" name="program" class="form-control" placeholder="Program" value=""></div>
                        
                        <div class="row"></div>
                        
                        <div class="col-md-6">  <label for="gender"> Gender:</label><br>
                            Male<input type="radio" name="gender" value="Male" checked>
                            Female<input type="radio" name="gender" value="Female" checked>
                        
                            <div class="row"></div>
                        
                        </div>
                        <div class="col-md-6">  <label for="faculty">Faculty:</label><br>
                            <input type="checkbox" name="faculty" value="1" checked>
                        </div>
                        
                        <div class="row"></div>
                        
                        <div class="col-md-6" <label for="semester">Semester:</label>
                            <select name="semester" id="cars">
                              <option value="">Empty</option>
                              <option value="1">1st Semester</option>
                              <option value="2">2nd Semester</option>
                              <option value="3">3rd Semester</option>
                              <option value="4">4th Semester</option>
                              <option value="5">5th Semester</option>
                              <option value="6">6th Semester</option>
                              <option value="7">7th Semester</option>
                              <option value="8">8th Semester</option>
                              
                            </select>
                        </div>
                        <div class="row"></div>
                        <div class="col-md-6">  <label for="extrovert"> Extrovert</label><br>
                            <input type="checkbox" name="extrovert" value="1" checked>
                        </div>
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="Submit">Save Profile</button></div>
                        
                    </div>
                
                </div>
            
                <div class="col-md-4">
                    <div class="p-3 py-5">
                        
                        <div class="d-flex align-items-center experience"><span>Are you a Driver?</span><label for="hide_show"><span class="input-group-text btn-primary m-2"><input class="form-check-input mt-2" onclick="ShowHideDiv(this)" type="checkbox" value="" aria-label="Checkbox for following text input"></span></label></div><br>
                        <div id="huz" style="display:none">
                        <div class="col-md-12"><label class="labels">License</label><input type="text" name="license" class="form-control" placeholder="License" value=""></div> <br>
                        <div class="col-md-12"><label class="labels">Experience</label><input type="text" name="experience" class="form-control" placeholder="Experience" value=""></div>
                            
                            <div class="row mt-5">
                            <div class="col-md-6"><label class="labels">Plate</label><input type="text" name="plate" class="form-control" value="" placeholder="state"></div>
                            <div class="col-md-6">  <label for="type"> Vehicle:</label><br>
                               Car<input type="radio" name="type" value="Car" checked>
                                Bike<input type="radio" name="type" value="Bike" checked>
                            </div>
                            <div class="col-md-6"><label class="labels">Model</label><input type="text" name="model" class="form-control" placeholder="country" value=""></div>
                            <div class="col-md-6"><label class="labels">Car</label><input type="text" name="carname" class="form-control" value="" placeholder="Car"></div>
                            <div class="col-md-6"><label class="labels">Seats</label><input type="text" name="seats" class="form-control" value="" placeholder="Seats"></div>
                            <div class="col-md-12"><label class="labels">Source</label><input type="text" name="source" class="form-control" placeholder="Source" value=""></div>
                            <div class="col-md-12"><label class="labels">Destination</label><input type="text" name="destination" class="form-control" placeholder="Destination" value=""></div>
                        
                            
                            <div class="col-md-6">  <label for="ac"> AC</label><br>
                                <input type="checkbox" name="ac" value="1" checked>
                            </div>

                          
                        
                    </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
        </div>
    </form>
        </div>
        <script type="text/javascript">
            var e="<%= e1%>";
            var h= e.substring(1,e.indexOf('@'));
            document.getElementById("k").value = h;
            
            function ShowHideDiv(hide_show) {
                var huz = document.getElementById("huz");
                huz.style.display = hide_show.checked ? "block" : "none";
            }

            if(isset($_POST['submit'])) {

                //Radio button has been set to "true"
                if(isset($_POST['IsMale']) && $_POST['IsMale'] == 'true') $_POST['IsMale'] = TRUE;
            
                //Radio button has been set to "false" or a value was not selected
                else $_POST['IsMale'] = FALSE;
            
            }
        </script>
    </body>
</html>